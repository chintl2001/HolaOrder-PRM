<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#FFFFFF">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/boder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_logo" tools:srcCompat="@drawable/deliveryman"/>

    <TextView
            android:text="Welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textHello"
            android:textSize="28sp" android:textStyle="bold"
            android:textColor="#000000" app:layout_constraintTop_toTopOf="@+id/view2" android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="@+id/view2" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.011"/>
    <TextView
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In sollicitudin lectus id nunc sollicitudin congue. Nam ligula est, pretium vel dui aliquet, malesuada pretium risus."
            android:layout_width="357dp"
            android:layout_height="91dp" android:id="@+id/textView2"
            android:textColor="#000000" android:textSize="16sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/view2" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textHello" android:textAlignment="inherit"/>


    <Button
            android:text="Sign In"
            android:layout_width="160dp"
            android:textColor="#000000"
            android:layout_height="53dp"
            android:id="@+id/btnSignin"
            android:background="@drawable/border_button"
            android:backgroundTint="#FFFFFF"
            app:buttonColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.395"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"/>

    <Button
            android:text="Sign Up"
            android:layout_width="160dp"
            android:textColor="#000000"
            android:layout_height="53dp"
            android:id="@+id/btnSignup"
            android:background="@drawable/border_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.395" app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintStart_toEndOf="@+id/btnSignin"/>

</androidx.constraintlayout.widget.ConstraintLayout>