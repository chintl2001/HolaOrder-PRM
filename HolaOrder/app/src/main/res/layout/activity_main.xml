<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#FFFFFF">
    <View
            android:layout_width="412dp"
            android:layout_height="327dp"
            android:id="@+id/view2"
            android:background="@drawable/boder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="1dp"/>
    <ImageView
            android:layout_width="122dp"
            android:layout_height="100dp" app:srcCompat="@drawable/icon_logo" android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="84dp"/>
    <ImageView
            android:layout_width="152dp"
            android:layout_height="65dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <TextView
            android:text="Welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textSize="28sp" android:textStyle="bold"
            android:textColor="#000000" app:layout_constraintTop_toTopOf="@+id/view2" android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="@+id/view2" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.011"/>
    <TextView
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In sollicitudin lectus id nunc sollicitudin congue. Nam ligula est, pretium vel dui aliquet, malesuada pretium risus."
            android:layout_width="357dp"
            android:layout_height="91dp" android:id="@+id/textView2"
            android:textColor="#000000" android:textSize="16sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/view2" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:textAlignment="inherit"/>


    <Button
            android:text="Sign In"
            android:layout_width="140dp"
            android:textColor="#000000"
            android:layout_height="53dp"
            android:id="@+id/btnSignin"
            android:background="@drawable/border_button"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.395"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.195" />

    <Button
            android:text="Sign Up"
            android:layout_width="140dp"
            android:textColor="#000000"
            android:layout_height="53dp"
            android:id="@+id/btnSignup"
            android:background="@drawable/border_button"
            tools:layout_editor_absoluteX="244dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.402" />

    <TextView
            android:text="Best choice, Best care"
            android:layout_width="145dp"
            android:layout_height="25dp" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="#000000" android:textStyle="bold"
            android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/imageView4"
            android:layout_marginBottom="117dp" app:layout_constraintBottom_toTopOf="@+id/view2"/>
</androidx.constraintlayout.widget.ConstraintLayout>